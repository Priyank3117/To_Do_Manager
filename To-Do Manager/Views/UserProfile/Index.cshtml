@using Entities.ViewModels.UserProfileViewModels;

@model UserProfileViewModel

<div class="row p-5 mt-5 mb-5" style="background-color: #ebebeb;border-radius: 20px;">
    <div class="col-12 col-md-3 mb-4 userProfileBoxContainer">
        <div class="userProfileBox">
            <div class="profileImageContainer">
                <img src="@Model.Avatar" id="profileImage" class="mt-3" alt="" />
                <input type="file" id="selectProfileImage" onchange="loadFile(event)" accept="image/*">
            </div>

            <p style="font-weight:500;font-size: 1.2rem;" class="m-0">@Model.FirstName @Model.LastName</p>
            <div>
                <!-- Change Password Modal Button -->
                <a role="button" class="text-muted m-0 mb-3"
                   style="font-size: 0.7rem;text-decoration: none;" onclick="openChangePasswordModal()">
                    Change Password
                </a>

                <!-- Change Password Modal -->
                <div class="modal fade" id="changePasswordModal" tabindex="-1"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header" style="border: none;">
                                <h5 class="modal-title" style="font-weight:450;font-size: 1.3rem;">
                                    Change
                                    Password
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body row" style="border: none;">
                                <div class="col">
                                    <div class="mb-3">
                                        <input type="password" class="form-control" id="oldPassword"
                                               placeholder="Enter old password" autocomplete="new-password">
                                        <span id="oldPasswordSpan" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <input type="password" class="form-control" id="newPassword"
                                               placeholder="Enter new password" autocomplete="new-password">
                                        <span id="newPasswordSpan" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <input type="password" class="form-control" id="confirmPassword"
                                               placeholder="Enter confirm password"
                                               autocomplete="new-password">
                                        <span id="confirmPasswordSpan" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="CancelCreateTeamButton me-2"
                                                data-bs-dismiss="modal">
                                            Cancel
                                        </button>
                                        <button type="button" class="createTeamButton changePasswordButton" disabled onclick="changePassword()">
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-9 p-1" id="formContainer">
        <form method="POST">
            <p class="userProfileFormTitle">Basic Information</p>
            <div class="basicInformationForm row mb-2">
                <input type="hidden" asp-for="UserId">
                <div class="col-12 col-sm-6">
                    <div class="mb-3">
                        <label for="FirstName" class="form-label userProfileFormLabel">First Name</label>
                        <input type="text" class="form-control" maxlength="16" asp-for="FirstName"
                               placeholder="Enter your name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="mb-3">
                        <label for="LastName" class="form-label userProfileFormLabel">Last Name</label>
                        <input type="text" class="form-control" maxlength="16" asp-for="LastName"
                               placeholder="Enter your surname">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="basicInformationForm row mb-2">
                <div class="col-12 col-sm-6">
                    <div class="mb-3">
                        <label for="Department" class="form-label userProfileFormLabel">Department</label>
                        <input type="text" class="form-control" maxlength="16" asp-for="Department"
                               placeholder="Enter your Department">
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="mb-3">
                        <label for="Gender" class="form-label userProfileFormLabel">Gender</label>
                        <select class="form-select form-control" aria-label="Default select example" asp-for="Gender">
                            <option selected>Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>
            </div>
            <p class="userProfileFormTitle">Professional Information</p>
            <div class="basicInformationForm row mb-2">
                <div class="col-12">
                    <div class="mb-3">
                        <label for="LinkedInURL" class="form-label userProfileFormLabel">LinkedIn</label>
                        <input type="text" class="form-control" asp-for="LinkedInURL"
                               placeholder="Enter your LinkedIn URL">
                        <span asp-validation-for="LinkedInURL" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="basicInformationForm row mb-2 mt-5">
                <div class="col userSaveBtnContainer">                    
                    <button type="submit" class="createTeamButton">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/js/UserProfile.js"></script>