<div class="ForgotPasswordDiv">
    <p class="loginTitle">Forgot Password</p>
    <form method="post">
        <div class="mb-3">
            <div class="row">
                    <label for="Email" class="form-label">Email</label>
                <div class="col-9">
                    <input type="email" class="form-control" id="Email" autocomplete="off">
                </div>
                <div class="col-3 d-flex align-items-center">
                    <a role="button" onclick="SendOTP()" id="SendOTPButton" class="SendOTPButton">Send OTP</a>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <span class="text-danger" id="EmailSpan"></span>
                </div>
            </div>

        </div>
        <div class="mb-3">
            <label for="OTP" class="form-label">OTP</label>
            <input type="text" class="form-control" pattern="\d*" maxlength="4" id="OTP" autocomplete="off">
            <span class="text-danger" id="OTPSpan"></span>
        </div>
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Account" type="button" class="backButton">Back</a>
                    </div>
                    <div class="mt-4">
                        <button type="button" onclick="VerifyOTP()" class="loginButton">Verify OTP</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>