@using Entities.ViewModels.AccountViewModels;

@model RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="registrationDiv">
    <p class="loginTitle">REGISTRATION</p>
    <form method="post">
        <div class="row">
            <di class="col-md-6 col-12">
                <div class="mb-3">
                    <label for="FirstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" autocomplete="off">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
            </di>
            <di class="col-md-6 col-12">
                <div class="mb-3">
                    <label for="LastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" autocomplete="off">
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
            </di>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" autocomplete="off">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" autocomplete="new-password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="mb-3">
            <label for="ComfirmPassword" class="form-label">Comfirm Password</label>
            <input type="password" class="form-control" asp-for="ComfirmPassword" autocomplete="new-password">
            <span class="text-danger" asp-validation-for="ComfirmPassword"></span>
        </div>
        <div class="row">
            <div class="col">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Account" type="button" class="backButton">Back</a>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="loginButton">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>