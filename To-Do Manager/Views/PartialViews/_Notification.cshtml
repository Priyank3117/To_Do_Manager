                        <hr class="text-muted p-0 m-0">
                    }
                    else if (notificaton.NotificationType == "NoLongerReportingPerson")
                    {
                        <li class="dropdown-item" onclick="getTeamManagementPage(@notificaton.NotificationId)">
                            <div class="badge text-bg-danger">
                                <div>
                                    <p class="m-0 mb-1">
                                        REPORTING
                                    </p>
