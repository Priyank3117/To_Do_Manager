@using Entities.ViewModels.HomeViewModels;

@model List<Notification>

<ul class="navbar-nav text-center">
    <li class="nav-item dropdown" style="list-style-type: none;">
        <a style="color: black;padding: 0px;" class="nav-link" id="notificationDropdown"
           role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/images/bell.png" class="notoficationImage" />
        </a>
        <ul class="dropdown-menu notificationDropdown mainNotificationDropdown"
            style="width: 470px;position: absolute;border-bottom:0px" aria-labelledby="notificationDropdown"
            id="forReopenThis">
            <li class="firstRowNotification">
                <p class="p-0 m-0" style="font-weight: 500;">Notification</p>
                <a role="button" class="text-muted" id="clearAllNotification" onclick="clearAllNotifications()">Clear All</a>
            </li>

            @if (Model != null && Model.Count() != 0)
            {
                foreach (var notificaton in Model)
                {
                    if (notificaton.NotificationType == "SetReportingPerson")
                    {
                        <li class="dropdown-item" onclick="getTeamManagementPage(@notificaton.NotificationId)">
                            <div class="badge text-bg-success">
                                <div>
                                    <p class="m-0 mb-1">
                                        REPORTING
                                    </p>
                                    <p class="m-0">
                                        PERSON
                                    </p>
                                </div>
                            </div>
                            <p class="m-0 dropRow">@Html.Raw(notificaton.Message)</p>
                            @if (notificaton.IsRead == true)
                            {
                                <img src="/images/checked.png" alt="">
                            }
                            else
                            {
                                <div class="dot"></div>
                            }
                        </li>
                        <hr class="text-muted p-0 m-0">
                    }
                    else if (notificaton.NotificationType == "RemovedReportingPerson")
                    {
                        <li class="dropdown-item" onclick="getTeamManagementPage(@notificaton.NotificationId)">
