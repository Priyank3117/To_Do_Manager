@using Entities.ViewModels.HomeViewModels;

@model List<AllTodayTasksForListView>

@if (Model != null)
{
    if (Model.Count() != 0)
    {
        <div class="row">
            <div class="col-1" style="width: 4%">
            </div>
            <div class="col-5">
                <h5>Task Name</h5>
            </div>
            <div class="col-4">
                <h5>Team Name</h5>
            </div>
            <div class="col-2">
                <h5>Deadline</h5>
            </div>
        </div>
        @foreach (var task in Model)
        {
            <div class="taskRow mt-3">
                <div class="row" style="height: inherit">
                    <div class="col-1 d-flex justify-content-start align-items-center" style="width: 4%">
                        @if (task.TaskStatus == true)
                        {
                            @if (task.IsMyTask)
                            {
                                <button class="btn p-0 me-2" onclick="markTaskAsCompleteOrUncomplete(@task.UserId, @task.TeamId, @task.TaskId)" id="Task_@task.TaskId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20"
                     height="20" fill="currentColor"
                     class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                    </svg>
                                </button>
                            }
                            else
                            {
                                <button class="btn p-0 me-2" id="Task_@task.TaskId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20"
                     height="20" fill="currentColor"
                     class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                    </svg>
                                </button>
                            }
                        }
                        else
                        {
                            @if (task.IsMyTask)
                            {
                                <button class="btn p-0 me-2" onclick="markTaskAsCompleteOrUncomplete(@task.UserId, @task.TeamId, @task.TaskId)" id="Task_@task.TaskId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20"
                     height="20" fill="currentColor"
                     class="bi bi-check-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                                    </svg>
                                </button>
                            }
                            else
                            {
                                <button class="btn p-0 me-2" id="Task_@task.TaskId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20"
                     height="20" fill="currentColor"
                     class="bi bi-check-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
                                    </svg>
                                </button>
                            }
                        }
                    </div>
                    <div class="col-5 d-flex justify-content-start align-items-center">
                        <div class="d-flex justify-content-start align-items-center" style="width: 100%; height: 100%">
                            @if (!task.IsMyTask)
                            {
                                <img src="@task.Avatar" class="userAvatar me-2" alt="" style="height: 25px; width: 25px;"/>
                            }
                            <p class="m-0 p-0 mt-3" style="width: 100%;height: 100%;" onclick="openTaskDetailOffcanvas(event, @task.TaskId)">@task.TaskName</p>
                        </div>
                    </div>
                    <div class="col-4 d-flex justify-content-start align-items-center" onclick="openTaskDetailOffcanvas(event, @task.TaskId)">
                        <p class="m-0 p-0">@task.TeamName</p>
                    </div>
                    <div class="col-2 d-flex justify-content-start align-items-center" onclick="openTaskDetailOffcanvas(event, @task.TaskId)">
                        <p class="m-0 p-0">@task.Deadline</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="allTeamContainer" style="justify-content: center;">
                    <p class="text-muted mt-5" style="font-family: sans-serif;font-size:xx-large;">No Task Available</p>
                </div>
            </div>
        </div>
    }
}
